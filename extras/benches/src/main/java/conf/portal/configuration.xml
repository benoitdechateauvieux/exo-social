	<external-component-plugins>
		<target-component>org.exoplatform.services.bench.DataInjectorService</target-component>
		<component-plugin>
			<name>ExoSocialDataInjector</name>
			<set-method>addInjector</set-method>
			<type>org.exoplatform.social.extras.benches.ExoSocialDataInjector</type>
			<description>inject data for eXo Social</description>
			<init-params>
				<value-param>
					<name>mU</name> <!-- maximum peoples -->
					<value>500</value>
				</value-param>
				<value-param>
					<name>mR</name> <!-- maximum size of relationships -->
					<value>50</value>
				</value-param>
				<value-param>
					<name>mA</name> <!-- maximum activities -->
					<value>500</value>
				</value-param>
				<value-param>
					<name>mS</name> <!-- maximum spaces -->
					<value>10</value>
				</value-param>
			</init-params>
		</component-plugin>
	</external-component-plugins>
</configuration>
